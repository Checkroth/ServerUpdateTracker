<%= form_for(@server) do |f| %>
  <% if @server.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h2>

      <ul>
      <% @server.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label 'Operating System' %><br />
    <%= f.text_field :os %>
  </div>

  <div class="field">
    <%= f.label 'Physical/Virtual' %><br />
    <%= f.radio_button :phys, "PHYS" %>
    <%= f.label :phys, "Physical", :value => "PHYS" %>
    <%= f.radio_button :phys, "VM" %>
    <%= f.label :phys, "Virtual Machine", :value => "VM" %>


    <%= f.label :status, "Out of date", :value => "Out of date" %>
    <%= f.radio_button :status, "Up to date" %>
    <%= f.label :status, "Up to date", :value => "Up to date" %><br />
    <%= f.text_field :phys %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Server', :class => 'save-button' %>
  </div>

<% end %>
